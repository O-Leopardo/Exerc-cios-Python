print ('-' * 30)
print (f'{"Tabela de Preços":^30}')
print ('-' * 30)
lista = ('Lápis', 2.50, 'Borracha', 3.50, 'Apontador', 3.00, 'Caderno', 15.00,'Mochila', 120.00, 'Estojo', 8.00)
for pos in range(0, len(lista)):
    if pos % 2 ==0:
        print (f'{lista [pos]:.<30}', end='')
    else:
        print (f'R$ {lista[pos]:<7.2f}')
print ('-'*30)
